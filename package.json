{
    "version": "0.1.1",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "ts-build build",
        "lint": "ts-build lint",
        "prepare": "git config core.hookspath .githooks && ts-build build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "test": "jest",
        "betterer": "betterer --strict",
        "prettier": "prettier --write src/**/*"
    },
    "husky": {
        "hooks": {
            "pre-commit": "eslint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "default": "./dist/cjs/index.js"
        }
    },
    "name": "rx-select",
    "author": "azandrew-sidoine",
    "module": "dist/esm/index.js",
    "size-limit": [
        {
            "path": "dist/cjs/index.js",
            "limit": "5 KB"
        },
        {
            "path": "dist/esm/index.js",
            "limit": "5 KB"
        }
    ],
    "devDependencies": {
        "@betterer/cli": "^5.1.7",
        "@betterer/typescript": "^5.1.7",
        "rxjs": "^6.6.7 || ^7.0",
        "@iazlabs/functional": "^0.1.8",
        "@iazlabs/utilities": "^0.1.8",
        "@iazlabs/ts-build": "^0.1.12",
        "@size-limit/preset-small-lib": "^7.0.8",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-watch-typeahead": "^1.0.0",
        "prettier": "^2.6.1",
        "size-limit": "^7.0.8",
        "ts-jest": "^27.1.4",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3"
    },
    "peerDependencies": {
        "rxjs": "^6.6.7 || ^7.0",
        "@iazlabs/functional": "^0.1.8",
        "@iazlabs/utilities": "^0.1.8"
    }
}
