{
    "version": "0.2.1",
    "license": "MIT",
    "name": "@azlabsjs/rx-select",
    "author": "azandrew-sidoine",
    "main": "dist/index.js",
    "module": "dist/esm/index.mjs",
    "types": "dist/types/index.d.ts",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "ts-build build",
        "lint": "ts-build lint",
        "prepare": "git config core.hookspath .githooks && ts-build build",
        "size": "size-limit",
        "test": "jest",
        "prettier": "prettier --write src/**/*"
    },
    "husky": {
        "hooks": {
            "pre-commit": "eslint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/types/index.d.mts",
                "default": "./dist/esm/index.mjs"
            },
            "require": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/cjs/index.cjs"
            }
        }
    },
    "size-limit": [
        {
            "path": "dist/cjs/index.cjs",
            "limit": "7 KB"
        },
        {
            "path": "dist/esm/index.mjs",
            "limit": "7 KB"
        }
    ],
    "devDependencies": {
        "rxjs": "^6.6.7 || ^7.0",
        "@azlabsjs/ts-build": "^0.4.21",
        "size-limit": "^11.1.4",
        "@size-limit/preset-small-lib": "^11.1.4",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-watch-typeahead": "^1.0.0",
        "prettier": "^2.6.1",
        "ts-jest": "^27.1.4",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "@azlabsjs/functional": "^0.2.0",
        "@azlabsjs/utilities": "^0.2.0"
    },
    "peerDependencies": {
        "rxjs": "^6.6.7 || ^7.0"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/@azlabsjs"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/azlabsjs/rx-select.git"
    }
}
